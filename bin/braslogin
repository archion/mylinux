#!/bin/bash
while true;do
	echo 正在检查网络链接...
	if  ping -c 1 -w 1 www.baidu.com &> /dev/null; then
		echo -e '\033[0;32;1m已经联网'
		#exit
		sleep 180
		continue
	fi
	if  ping -c 1 -w 1 210.28.129.9 &> /dev/null; then
		while true;do
			echo 正在尝试联网...
			if  curl -s --data "username=$1&password=$2" http://210.28.129.9/portal_io/login |grep -o "登录成功"; then
				break
			else
				echo -e '\033[0;31;1m登录失败，等待重试...'
				#sleep 10
				break
			fi
		done
	else
		echo -e '\033[0;31;1m无法链接内网，检查是否链接网线'
		exit
	fi
done
