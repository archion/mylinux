#!/bin/bash
t=0
function disconnect() {
	if  curl -s http://210.28.129.9/portal_io/logout | grep -o "下线成功"; then
		notify-send "bras下线成功" --icon=dialog-information
	else
		echo -e '\033[0;31;1mbras下线失败'
		notify-send "bras下线失败" --icon=dialog-information
	fi
	exit
}
while getopts "t:" OPTION
do
    case $OPTION in
        t)
			t=$((OPTARG*60))
			trap disconnect SIGINT
            ;;
    esac
done
shift $((OPTIND - 1))
while true;do
	echo 正在检查网络链接...
	if  ping -c 1 -w 1 www.baidu.com &> /dev/null; then
		echo -e '\033[0;32;1m已经联网'
		#exit
		sleep 180
		continue
	fi
	if  ping -c 1 -w 1 210.28.129.9 &> /dev/null; then
		while true;do
			echo 正在尝试联网...
			if  curl -s --data "username=$1&password=$2" http://210.28.129.9/portal_io/login |grep -o "登录成功"; then
				break
			else
				echo -e '\033[0;31;1m登录失败，等待重试...'
				#sleep 10
				break
			fi
		done
	else
		echo -e '\033[0;31;1m无法链接内网，检查是否链接网线'
		exit
	fi
	if (($t>0)) ; then
		echo "$((t/60))分钟后断开"
		sleep $t
		disconnect
	fi
done
