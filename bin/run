#!/bin/bash
t1=$(date +%F\ %T)
if [ $(whoami) != "archion" ]; then
	upload
fi
if (($#>0)); then 
	echo -e "\e[0;32m run in remote at $t1 \e[0m"
	ssh YZD@192.168.0.205 "cd $(pwd) && make clean && make && ./$(ls *.out)"
else
	echo -e "\e[0;32m run in localhost at $t1 \e[0m"
	make clean
	make
	./$(ls *.out)
fi
if [ $(whoami) != "archion" ]; then
	download
else
	notify-send 'Program complete!' $(ls *.out)' complete!' --icon=dialog-information
fi
t2=$(date +%F\ %T)
echo -e "\e[0;32m From $t1 to $t2 \e[0m"
