#!/bin/bash
t1=$(date +%F\ %T)
if [ $(whoami) != "archion" ]; then
	upload $1
fi
remote=false
while getopts :r OPTION
do
    case $OPTION in
        r)
            remote=true
            ;;
    esac
done
shift $((OPTIND - 1))
f=${1:-$(ls -t *.f90|awk 'NR==1{print $1}')}
sed -i "s/^[^#].*=.*out/out = ${f%.*}.out/" makefile 
if $remote; then 
	echo -e "\e[0;32;1m run \e[41;32;1m ${f%.*}.out \e[0;32;1m in remote at $t1 \e[0m"
	ssh YZD@192.168.0.205 "cd $(pwd) && make clean && make && ./${f%.*}.out"
else
	echo -e "\e[0;32;1m run \e[41;32;1m ${f%.*}.out \e[0;32;1m in localhost at $t1 \e[0m"
	make clean
	make
	./${f%.*}.out
fi
if [ $(whoami) != "archion" ]; then
	download $1
else
	notify-send 'Program complete!' ${f%.*}.out' complete!' --icon=dialog-information
fi
t2=$(date +%F\ %T)
dt=$(($(date -d "$t2" +%s) - $(date -d "$t1" +%s)))
day=$((dt/(60*60*24)))
dt=$((dt-day*(60*60*24)))
hour=$((dt/(60*60)))
dt=$((dt-hour*(60*60)))
min=$((dt/(60)))
sec=$((dt-min*(60)))
echo -e "\e[0;32;1m run \e[41;32;1m ${f%.*}.out \e[0;32;1m From $t1 to $t2 total time is ${day}D ${hour}h ${min}m ${sec}s \e[0m"
